<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="400dp"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start | center"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/gray_circle"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_person_black_24dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start |center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/text_card_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Jenish Dhanani"
                    android:textSize="18sp"
                    android:textColor="@color/dark_yellow"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_patient_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Plague"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/text_patient_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="19/06/2019"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>





            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/lightgray" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/text_patient_dr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dr.Ashish Jani"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_patient_medicines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Erythromycin , Ciprofloxacian"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
